extends layout

block localcss
	link(rel='stylesheet' type='text/css' href='css/home.css')
block localscripts
	script(src='js/home.js')
block content
	.body-container
		.hero
			.mobile-show
				.hero__footer.show-last
					include home/version-toggle
					include home/social-icons

			.hero__content.row.mobile-hide
				.hero__content-left.four.columns
					.focus-area--is-red.focus-area--is-2#fa-designing
						include focus-area/designing
					.focus-area--is-blue.focus-area--is-4#fa-community
						include focus-area/community
				.hero__content-center.four.columns
					.dont-show
						.center__welcome#welcome
							h3 Welcome!
							p This is my lil corner of the<br>net, happy explorin'
					.center__projects-container#desktop-sharing
						include center-project/sharing
				.hero__content-right.four.columns
					.focus-area--is-purple.focus-area--is-1#fa-artifacts
						include focus-area/artifacts
					.focus-area--is-orange.focus-area--is-3#fa-sharing
						include focus-area/sharing

			.mobile-show
				.hero__content.row
					.hero__content-center.twelve.columns
						.dont-show
							.center__welcome
								h3 Welcome!
								p This is my lil corner of the<br>net, happy explorin'
				.hero__content.row
					.hero__content-center.twelve.columns
						.focus-area--is-purple.focus-area--is-1#fa-artifacts
							include focus-area/artifacts
						.focus-area--is-red.focus-area--is-2#fa-designing
							include focus-area/designing
						.focus-area--is-orange.focus-area--is-3#fa-sharing
							include focus-area/sharing
						.center__projects-container#mobile-sharing
							include center-project/sharing
						.focus-area--is-blue.focus-area--is-4#fa-community
							include focus-area/community


			
			.hero__footer.show-last
				.mobile-hide
					include home/version-toggle

				.hero__footer-description
					.mobile-hide
						|Design at <a href='/plaid'>Plaid</a> ~ Art and community at <a href='/teal'>Teal Process</a>
					.mobile-show
						|Design at <a href='/plaid'>Plaid</a><br>~<br> Art and community<br>at <a href='/teal'>Teal Process</a>

				.mobile-hide
					include home/social-icons


						
		



					




