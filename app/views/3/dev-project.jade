extends layout

block localcss
	link(rel='stylesheet' type='text/css' href='css/spring.css')
	link(rel='stylesheet' type='text/css' href='css/project.css')
block localscripts
	script(src='js/project.js')
block content
	.header#dev
		.container
			.hide-left
				.back
					.triangle
					| Home
			.title.hide-left 
				block title
			.meta
				.type.hide-left
					block type
					block year
				block experience
	.container#dev
		.quote.dont-show
			block quote
		.base-info.row.dont-show
			block base-info

	.container.dont-show#dev
		block main

	.container
		.footer
			.back#dev
				.triangle
				| Back to Projects
		